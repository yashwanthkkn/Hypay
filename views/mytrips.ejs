<%- include("partials/header"); %>
<div >
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<a class="navbar-brand" href="#"><i class="fab fa-galactic-senate"></i><strong class="pl-2">Hypay</strong></a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	  </button>
	  <div class="collapse navbar-collapse" id="navbarNav">
		<ul class="navbar-nav">
		  <li class="nav-item active">
			<a class="nav-link" href="/logged">Home <span class="sr-only">(current)</span></a>
		  </li>
		  <li class="nav-item">
			<a class="nav-link" href="/about">About</a>
		  </li>
		  <li class="nav-item">
			<a class="nav-link" href="/logout">Logout</a>
		  </li>
		</ul>
	  </div>
    </nav>
    <div class="container mt-3">
        <% var n = 0%>
        <% User.txns.forEach((x)=>{ %>
            <div class="card mt-2 pb-2">
                <div class="card-body">
                  <h5 class="card-title">Trip - <%= ++n %></h5>
                  <hr>
                </div>
                <ul class="list-group list-group-flush text-dark">
                  <li class="list-group-item">Bus Number :<strong> <%= x.bus %></strong></li>
                  <li class="list-group-item">Seats     :<strong> <%= x.seats %></strong></li>
                  <li class="list-group-item">Travel   :<strong> <%= x.from %></strong> to <strong> <%= x.to %></strong></li>
                  <li class="list-group-item">Time :<strong> <%= x.ftime %></strong> to <strong> <%= x.totime %></strong></li>
                </ul>
                <div class="card-body">
                  <a href="#" class="card-link">Generate QR</a>
                  <a href="#" class="card-link">Another link</a>
                </div>
              </div>
      <%  }) %>
        
    </div>
</div>
