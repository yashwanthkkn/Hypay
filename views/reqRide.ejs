	</nav>
    <div class="container">

        <%if(flag){%>
            <div class="card">
                <div class="card-bodd">
                    <div class="card-title">
                        <h3 class="text-center text-success mt-5 ">Your Request is Recorded.....!</h3>
                    </div>
                </div>
            </div>
            <%}else{%>
            <div class="card">
                <h5 class="card-header">Bus Number :<%= bus.number %> </h5>
                <div class="card-body">
                    <h5 class="card-title">Travel : <strong> <%= bus.from %> </strong> to <strong> <%= bus.to %></strong></h5>
                    <p class="card-text">Time : <strong> <%= bus.ftime %> </strong> to <strong><%= bus.totime %></strong></p>
                    <p class="card-text">Available Seats : <strong><%= bus.available %></strong> </p>
                  <p class="card-text">Price : <strong><%= bus.price %></strong> </p>
                      <p class="text-info">You are Requesting for a Additional Transport. </p>
                      <p class="text-info">Your request will be recorded and you will receive a notification once a new trasport is available</p>
                      <form method="POST" action="/putReq/<%= user.id%>/<%= bus.number%>" enctype="multipart/form-data">
                          
                          <div class="form-group">
                              <label for="reason" class="text-danger" >* Please specify the reason and upload a proof</label>
                              <input type="text" name="reason" id="reason" class="form-control" required>
                          </div>
                          <div class="form-group">
                              <label for="image" class="text-danger">Upload Image</label>
                          <input type="file" name="image" id="image" class="form-control" max="2" required>
                          </div>
                          <div class="form-group">
                              <button type="submit" class="btn btn-primary btn-lg rounded-pill" value="<%= bus.number %>"> Confirm </button>
                          </div>
                      </form>
                </div>
              </div>	
        <%}%>
	</div>
<%- include("partials/header"); %>